<script>
    $(document).ready(function () {       

        $(".search-container a").click(function(e) {
            e.preventDefault();

            var query = $("#query").val();

            if (query && query.length > 0) {
                window.location.href = "/form/search?query=" + query;
            }
        });

        var width = $(document).width();

        $('.top-level').each(function () {

            if (width < 768 && ($(this).html() !== 'Contact' && $(this).html() !== 'Buy Now')) {
                $(this).removeAttr('data-hover');
                $(this).attr('data-toggle', 'dropdown');
            };
        });

        $('#navbar div.nav-expanded').mouseover(function () {
            var anchorSibling = $(this).siblings()[0];
            $(anchorSibling).css('color', '#FFFFFF');
        });

        $('#navbar div.nav-expanded').mouseout(function () {
            var anchorSibling = $(this).siblings()[0];
            $(anchorSibling).css('color', '#00aeef');
        });
        
        $('#standalonedropdown').click(function (e) {
            $('#standalonedropdownmenu').toggle();
            $(this).children('.caret').toggleClass("caretflip")

            if ($('#sitebackupdropdownmenu').is(':visible')) {
                $('#sitebackupdropdownmenu').toggle();
                $('#sitebackupdropdown').children('.caret').removeClass("caretflip");
            }

            if ($('#techniciansdropdownmenu').is(':visible')) {
                $('#techniciansdropdownmenu').toggle();
                $('#techniciansdropdown').children('.caret').removeClass("caretflip");
            }

            if ($('#upgradeproductsdropdownmenu').is(':visible')) {
                $('#upgradeproductsdropdownmenu').toggle();
                $('#upgradeproductsdropdown').children('.caret').removeClass("caretflip");
            }

            e.stopPropagation();
            e.preventDefault();
        });

        $('#sitebackupdropdown').click(function (e) {
            $('#sitebackupdropdownmenu').toggle();
            $(this).children('.caret').toggleClass("caretflip")

            if ($('#standalonedropdownmenu').is(':visible')) {
                $('#standalonedropdownmenu').toggle();
                $('#standalonedropdown').children('.caret').removeClass("caretflip");
            }

            if ($('#techniciansdropdownmenu').is(':visible')) {
                $('#techniciansdropdownmenu').toggle();
                $('#techniciansdropdown').children('.caret').removeClass("caretflip");
            }

            if ($('#upgradeproductsdropdownmenu').is(':visible')) {
                $('#upgradeproductsdropdownmenu').toggle();
                $('#upgradeproductsdropdown').children('.caret').removeClass("caretflip");
            }

            e.stopPropagation();
            e.preventDefault();
        });

        $('#techniciansdropdown').click(function (e) {
            $('#techniciansdropdownmenu').toggle();
            $(this).children('.caret').toggleClass("caretflip")

            if ($('#standalonedropdownmenu').is(':visible')) {
                $('#standalonedropdownmenu').toggle();
                $('#standalonedropdown').children('.caret').removeClass("caretflip");
            }

            if ($('#sitebackupdropdownmenu').is(':visible')) {
                $('#sitebackupdropdownmenu').toggle();
                $('#sitebackupdropdown').children('.caret').removeClass("caretflip");
            }

            if ($('#upgradeproductsdropdownmenu').is(':visible')) {
                $('#upgradeproductsdropdownmenu').toggle();
                $('#upgradeproductsdropdown').children('.caret').removeClass("caretflip");
            }

            e.stopPropagation();
            e.preventDefault();
        });

        $('#upgradeproductsdropdown').click(function (e) {
            $('#upgradeproductsdropdownmenu').toggle();
            $(this).children('.caret').toggleClass("caretflip")

           

            if ($('#standalonedropdownmenu').is(':visible')) {
                $('#standalonedropdownmenu').toggle();
                $('#standalonedropdown').children('.caret').removeClass("caretflip");
            }

            if ($('#sitebackupdropdownmenu').is(':visible')) {
                $('#sitebackupdropdownmenu').toggle();
                $('#sitebackupdropdown').children('.caret').removeClass("caretflip");
            }

            if ($('#techniciansdropdownmenu').is(':visible')) {
                $('#techniciansdropdownmenu').toggle();
                $('#techniciansdropdown').children('.caret').removeClass("caretflip");
            }

            e.stopPropagation();
            e.preventDefault();
        });
    });
</script>

