<script>

    var state = {};
    var stateLog = [];
    var stateSessionId = 0;

    var downloadSoftwareButton = $(".js-download-software");
    var registrationCompleteSection = $("#registrationCompleteSection");
    var continueButton = $("#continueButton");
    var closeButton = $("#closeButton");
    var completeFormSection = $("#completeFormSection");

    var partialFormSection = $("#partialFormSection");

    var registerType = $("#registerType");
    var registerEdition = $("#registerEdition");
    var registerEmail = $("#registerEmail");
    var emailFieldDescription = $("#emailFieldDescription");
    var mspExtraInfo = $("#mspExtraInfo");
    var requestADemoInfo = $("#requestADemoInfo");
    var mspExtraInfo2 = $("#mspExtraInfo2");
    var requestADemoInfo2 = $("#requestADemoInfo2");

    var chooseEditionSection = $("#chooseEditionSection");
    var registerSelectEdition = $("#registerSelectEdition");
    var marketingErrorMessageWrapper = $(".marketing-error-message-wrapper");
    var marketingErrorMessage = $(".marketing-error-message");
    var registrationForm = $("#registrationForm");
    var marketingRadioButton = $(".register-radio-buttons input");
    var enterEmailSection = $("#enterEmailSection");
    var marketingOptInSection = $("#marketingOptInSection");
    var countrySelectList = $("#country");
    var step2 = $(".step2");
    var step2Skip = $(".step-2-skip-text");
    var showThanksForOptingIn = $("#thanksForOptingIn").data("showmsg");
    var steps = $(".steps div");


    $(function () {
        initialState();
        countrySelectList.val(state.country);
        //$('input[placeholder]').placeholderLabel();

        var hasEdition = urlParam("edition") !== null;
        var hasType = urlParam("type") !== null;
        var autoLoadModal = hasEdition && hasType;

        if (state.formProps.showThanksForOptingIn) {
            loadRegistrationForm();
            registrationCompleteSection.append('<p class="h2">Thank you for opting in.</p>');
            registrationCompleteSection.append("Your discount has been applied. Press close to continue purchasing.");

            registrationCompleteSection.hide();
            chooseEditionSection.hide();
            enterEmailSection.hide();
            continueButton.hide();
            steps.hide();
            registrationCompleteSection.show();
        }

        mspExtraInfo.hide();
        requestADemoInfo.hide();
        mspExtraInfo2.hide();
        requestADemoInfo2.hide();
        

        // load the registration form
        if (autoLoadModal) {
            state.id = urlParam("id"); //searchParams.get("id");

            var emailInUrl = urlParam("email") != null;//searchParams.has("email");
            state.email = emailInUrl ? decodeURIComponent(urlParam("email").toString().toLowerCase().replace(" ", "+")) : "";


            var downloadInUrl = urlParam("download");//searchParams.has("download");
            state.download = downloadInUrl ? urlParam("download").toString().toLowerCase() : "y";

            state.edition = urlParam("edition").toString().toLowerCase();//searchParams.get("edition");
            state.type = urlParam("type").toString().toLowerCase();//searchParams.get("type").toString().toLowerCase();

            loadRegistrationForm();
        }

        downloadSoftwareButton.click(function () {
            state.edition = $(this).data("edition").toString().toLowerCase();
            state.type = $(this).data("type").toString().toLowerCase();
            state.text = $(this).data("extratext");          
            state.text = state.text ? state.text.toString() : "";

            toggleSections();
            loadRegistrationForm();
        });

        $(".mcTrack").focusout(function () {
            var key = $(this).attr("name");
            var val = $(this).val();
            //startTracking(key, val);
        });
        // END load the registration form

        // helpers
        function urlParam(name) {
            var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
            if (results == null) {
                return null;
            }
            else {
                return decodeURI(results[1]) || 0;
            }
        }

        function toggleSections() {
            registrationCompleteSection.hide();
            chooseEditionSection.show();
            enterEmailSection.show();
            //marketingOptInSection.show();
            continueButton.show();
        }

        function setEmailFieldDescription() {

            // gotta love dynamic objects
            var emailFieldLabels = {
                page1: {
                    home: {
                        free: "Please enter an email (optional) to register or download",
                        trial: "Please enter an email (optional) to register or download"
                    },
                    business: {
                        free: "Please enter an email to register or download",
                        trial: "Please enter an email to register or download",
                        smDemo: "You'll need to register to schedule a demo. Enter your email address to get started:",
                        smTryIt: "To start a trial, enter your email below:",
                    }
                },
                page2: {
                    home: {
                        free: "", // there is no page2 for home
                        trial: "" // there is no page2 for home
                    },
                    business: {
                        free: "Please enter your email to register for trial support, and optionally for Macrium offers and news",
                        trial: "Please enter your email to register for trial support, and optionally for Macrium offers and news"
                    }
                }
            }

            var isFree = state.edition === "5";            
            var isSMDemo = state.text === "requestADemoInfo";
            var isSMTryIt = state.text === "mspExtraInfo";
            var isHome = state.type === "h";
            var page = state.formProps.step === 1 ? 1 : 2;

            var emailFieldDescriptionText =
                emailFieldLabels[page === 1 ? "page1" : "page2"][isHome ? "home" : "business"][isFree ? "free" : isSMDemo ? "smDemo" : isSMTryIt ? "smTryIt" : "trial"];

            emailFieldDescription.html(emailFieldDescriptionText);
        }

        function radioButtonsErrorPlacement() {
            // when the submit button is clicked, override the display position of the error message as jQuery validate puts it in an odd place
            // you can use error placement instead https://stackoverflow.com/questions/6545964/jquery-validation-error-placement if you wish to pursue jQuery knowledge
            var radioError = $(".register-radio-buttons label.error");
            if (radioError.html() !== undefined && radioError.html().length > 0) {
                marketingErrorMessageWrapper.show();
                marketingErrorMessage.html($(radioError).html());
                radioError.html("");
            }
        }

        function loadSelectEditionForm() {
            // auto select edition if business and not free edition
            if (state.type === "b" && state.edition !== "5") {
                chooseEditionSection.show();
                $("#registerSelectEdition option").each(function () {
                    if ($(this).val() === state.edition) {
                        $(this).attr("selected", "selected");
                    }
                });
            } else {
                chooseEditionSection.hide();
            }
        }

        function sendDetails() {
            $("#cover").toggle();

            $.post("/download/registersoftware", state, function () {
                // can do some stuff here
            })
                .done(function (u) {
                    registrationCompleteSection.html("");
                    if (state.email === "" && state.type === "h") {

                        $(step2).css("background", "#CCC");
                        $(step2Skip).html("(" + state.formProps.notRequired + ")");
                        $(step2Skip).show();

                        registrationCompleteSection.append('<p class="h2">Thank you for downloading our software.</p>');
                        registrationCompleteSection.append("Please open the installation file and follow the instructions within.");
                        window.location.href = u;
                    }

                    if (state.email !== "") {
                        registrationCompleteSection.append('<p class="h2">Thank you for registering.</p>');
                        registrationCompleteSection.append("Please check your email (" + state.email + ") and follow the instructions within to continue.");
                        trackState();
                        startTracking("emailConfirmation", "sent");
                        updateStep();
                    }

                    $("#cover").toggle();
                    registrationCompleteSection.show();

                    if (state.emailExists) {
                        $(step2).css("background", "#CCC");
                        $(step2Skip).html("(" + state.formProps.alreadyRegistered + ")");
                        $(step2Skip).show();
                    }

                    updateStep();
                    notifyGoogleAnalytics();
                    resetForm();                    
                });
        }

        function updateStep() {
            var count = 1;
            $(".steps .step-num").each(function () {

                if (count === 1 && state.formProps.step === 2) {
                    $(this).html("✔");
                }

                if (state.formProps.step === 3) {
                    $(this).html("✔");
                }

                count++;
            });
        }

        function notifyGoogleAnalytics() {
            //console.log(state.email, state.edition, state.type, state.marketing, state.emailExists);

            var newUser = !state.emailExists;
            var business = state.type === "b";
            var home = state.type === "h";

            var eventLabel = home ? "HomeTrialDownload" : "BusinessTrialDownload";

            //ga('send', {
            //    hitType: 'event',
            //    eventCategory: 'button',
            //    eventAction: 'click',
            //    eventLabel: eventLabel
            //});
            ga('send', 'event', 'button', 'click', eventLabel, '1');
        }

        function resetSteps() {
            var count = 1;
            $(".steps .step-num").each(function () {
                // not if the form is open
                if (state.formProps.step === 1) {
                    // the form is still open
                    $(this).html(count);
                    $(this).css("background", "#00aeef");
                    $(step2Skip).hide();
                }

                count++;
            });
        }

        function checkEmailExists() {
            $("#cover").toggle();

            var url = "/download/CheckEmailExists?email=" + encodeURIComponent(state.email);

            $.get(url, function () {
                    // can do some stuff here
                })
                .done(function (resp) {
                    state.emailExists = resp === "true";
                    if (state.emailExists === true || state.formProps.completeFormOpen === true || state.formProps.partialFormOpen === true) {
                        state.formProps.step = 3;
                        sendDetails();
                    }
                    else if (state.type === "h") {
                        
                        // add this to state
                        state.formProps.partialFormOpen = true;
                        state.formProps.step = 2;
                        updateStep();
                        setEmailFieldDescription();
                        partialFormSection.show();
                    }
                    else {
                        state.formProps.completeFormOpen = true;
                        state.formProps.step = 2;
                        updateStep();
                        setEmailFieldDescription();
                        stateLog = [];

                        stateSessionId = Date.now();
                        startTracking("form", "opened");
                        startTracking("email", state.email);
                        startTracking("edition", state.edition);
                        startTracking("type", state.type);
                        completeFormSection.show();

                    }

                    $("#cover").toggle();
                });
        }

        function startTracking(key, str) {

            if (key !== undefined) {

                var dt = new Date();

                var y = dt.getFullYear();
                var m = zeroPad(dt.getMonth() + 1);
                var d = zeroPad(dt.getDate());
                var h = zeroPad(dt.getHours());
                var mi = zeroPad(dt.getMinutes());
                var s = zeroPad(dt.getSeconds());

                //var cSharpDateTime = `${y}-${m}-${d} ${h}:${mi}:${s}`;

                var cSharpDateTime = y + '-' + m + '-' + d + ' ' + h + ':' + mi + ':' + s;

                var uvid = getCookiebyName("uvid");
                var time = cSharpDateTime;

                console.log(time);

                var field = key;
                var value = str;

                stateLog.push({ uvid : uvid, time : time, field: field, value:value, session: stateSessionId });
                //console.log(stateLog, state);
            }
        }

        function trackState() {

            for (var key in state) {
                if (typeof state[key] !== "object") {
                    startTracking(key, state[key]);
                }
            }
        }

        function zeroPad(num) {
            return num < 10 ? '0' + num + '' : num;
        }

        function checkIsEu() {
            $("#cover").toggle();

            var url = "/form/CurrencySetup";

            $.get(url, function () {
                    // can do some stuff here
                })
                .done(function (resp) {
                    var isEu = getCookiebyName("isEu");
                    state.marketing = isEu === "0" ? true : false;

                    $(".register-radio-buttons input").each(function () {
                        var id = $(this).attr("id");
                        if (id.indexOf("yes") > -1 && state.marketing === true) {
                            $(this).prop("checked", true);
                        }
                    });


                    $("#cover").toggle();
                });
        }

        function initialState() {
            state = {
                id: "",
                email: "",
                edition: "",
                type: "",
                firstname: "",
                lastname: "",
                purchasing_as: "",
                company: "",
                line1: "",
                city: "",
                country: getCookiebyName("country"),
                state: "",
                postCodeZip: "",
                phone: "",
                emailExists: false,
                marketing: false,
                download: "y",
                PartnerRef: $("#PartnerRef").val(),
                text:"",
                formProps: {
                    completeFormOpen: false,
                    partialFormOpen: false,
                    step: 1,
                    notRequired: "Not Required",
                    alreadyRegistered: "Already Registered",
                    showThanksForOptingIn: showThanksForOptingIn,
                    showMspExtraInfo: false
                }
            };
        }

        function resetForm() {
            chooseEditionSection.hide();
            enterEmailSection.hide();
            completeFormSection.hide();
            partialFormSection.hide();
            continueButton.hide();
            resetSteps();
            initialState();
            resetFormValues();
        }

        function resetStateLog() {
            $("#cover").toggle();
            $.post("/form/leadformcompletionlog", {stateLog : stateLog}, function () {
                    // can do some stuff here
                })
                .done(function (u) {
                    stateLog = [];
                    stateSessionId = 0;
                    $("#cover").toggle();
                });
        }
        
        function resetFormValues() {
            $('#completeFormSection .form-control:not(input[name="marketing"])').val(null);
        }

        function getCookiebyName(name) {
            var pair = document.cookie.match(new RegExp(name + '=([^;]+)'));
            return !!pair ? pair[1] : "US";
        };
        // END helpers


        function loadRegistrationForm() {

            // set form values
            registerType.val(state.type);
            registerEdition.val(state.edition);
            registerEmail.val(state.email);
           
            if (state.text === "mspExtraInfo") {
                mspExtraInfo.show();
            }
                       
            if (state.text === "requestADemoInfo") {
                requestADemoInfo.show();
            }          

            checkIsEu();

            $(step2Skip).hide();
            $(".macrium-form-control-label").hide(); //

            setEmailFieldDescription();
            loadSelectEditionForm();

            $("#jsDownloadSoftwareContainer").modal("show");
        }

        continueButton.on('click', function () {
            if (state.type === "h") {

                if (state.email === "") {
                    $("input[id*=registerEmail]").rules("remove", "required");
                    $("input[name*=marketing]").rules("remove", "required");
                }
                else {
                    $("input[id*=registerEmail]").rules("add", "required");
                    $("input[name*=marketing2]").rules("add", "required");
                }

            }
            else {
                $("input[id*=registerEmail]").rules("add", "required");
                $("input[name*=marketing]").rules("add", "required");
            }

            $(registrationForm).submit();
            radioButtonsErrorPlacement();
        });

        $(registrationForm).validate({
            rules: {
                registerEmail: { required: true, email: true },

                phone: {
                    required: $(".requirePhone").val() == "1",
                    regex: /^((\+[1-9]{1,4}[ \-]*)|(\([0-9]{2,3}\)[ \-]*)|([0-9]{2,4})[ \-]*)*?[0-9]{3,4}?[ \-]*[0-9]{3,4}?$/,
                    minlength: 6,
                    maxlength: 25
                },

                firstname: { required: true },
                lastname: { required: true },
                purchasing_as: { required: true },
                company: { required: true },
                line1: { required: true },
                postCodeZip: { required: true },
                city: { required: true },
                state: { required: true },
                marketing: { required: true },
            },

            messages: {
                phone: {
                    regex: "Invalid Phone Number"
                }
            },

            invalidHandler: function () {
                trackState();
                startTracking("validationFailed", true);
            },

            submitHandler: function (form) {

                
                if (state.text === "mspExtraInfo") {
                    mspExtraInfo.hide();
                    mspExtraInfo2.show();
                }
                       
                if (state.text === "requestADemoInfo") {
                    requestADemoInfo.hide();
                    requestADemoInfo2.show();
                } 

                if (state.type === "b" || state.type === "32" || state.type === "64") {
                    if (!state.emailExists) {
                        checkEmailExists();
                    }
                }
                else if (state.type === "h" && state.email !== "") {
                    
                    checkEmailExists();
                }
                else {
                    state.formProps.step = 3;
                    sendDetails();
                }

                return false;
            }
        });

        //  behaviours and events and binding
        marketingRadioButton.change(function () {
            marketingErrorMessageWrapper.hide();
            state.marketing = $(this).val();
        });

        registerSelectEdition.change(function () {
            state.edition = $(this).val();
        });

        registerEmail.change(function () {
            state.email = $(this).val();
        });

        closeButton.click(function () {
            mspExtraInfo.hide();
            requestADemoInfo.hide();
            mspExtraInfo2.hide();
            requestADemoInfo2.hide();

            resetForm();
            startTracking("form", "closed");
            resetStateLog();
            steps.show("slow");
        });

        $("#completeFormSection .form-control").change(function () {
            var name = $(this).attr("name");
            state[name] = $(this).val();

            var myLabel = $(this).prev();
            var val = $(this).val();

            if (val === "" || val === undefined || val === null) {
                $(myLabel).hide("fast");
            } else {
                $(myLabel.show("fast"));
            }
        });

        //$("#completeFormSection .form-control")
    });
    /**/
</script>

<script>
    // This example displays an address form, using the autocomplete feature
    // of the Google Places API to help users fill in the information.

    // This example requires the Places library. Include the libraries=places
    // parameter when you first load the API. For example:
    // <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&libraries=places">

    var placeSearch, autocomplete;
    var componentForm = {
        street_number: 'short_name',
        route: 'long_name',
        postal_town: 'long_name',
        administrative_area_level_1: 'short_name',
        country: 'short_name',
        postal_code: 'short_name',
        administrative_area_level_2: 'short_name',
        locality: 'long_name'
    };

    var labelHasBeenMoved = false;

    function initAutocomplete() {
        // Create the autocomplete object, restricting the search to geographical
        // location types.
        autocomplete = new google.maps.places.Autocomplete(
            // type {!HTMLInputElement} */
            (document.getElementById('autocomplete')),
            { types: ['geocode'] });

        // When the user selects an address from the dropdown, populate the address
        // fields in the form.
        autocomplete.addListener('place_changed', fillInAddress);
    }

    function fieldHasValue(fieldValue) {
        if (fieldValue === " " || fieldValue === null || fieldValue === "" || fieldValue === undefined) {
            return false;
        }
        return true;
    }

    function fillInAddress() {
        // Get the place details from the autocomplete object.
        var place = autocomplete.getPlace();

        var fullAddressObj = place.address_components;

        var line1 = retrieveFromGoogleAddress("line1", fullAddressObj);
        $("#line1").val(line1);
        $("#line1").trigger("change");
        state.line1 = line1;

        var city = retrieveFromGoogleAddress("city", fullAddressObj);
        $("#city").val(city);
        $("#city").trigger("change");
        state.city = city;

        var stateCountryRegion = retrieveFromGoogleAddress("stateCountyRegion", fullAddressObj);;
        $("#state").val(stateCountryRegion);
        $("#state").trigger("change");;
        state.state = stateCountryRegion;

        var country = retrieveFromGoogleAddress("country", fullAddressObj);
        var countryId = "country";
        document.getElementById(countryId).value = country;
        state.country = country;

        var postCodeZip = retrieveFromGoogleAddress("postCodeZip", fullAddressObj);
        $("#postCodeZip").val(postCodeZip);
        $("#postCodeZip").trigger("change");
        state.postCodeZip = postCodeZip;

        var phone = '+' + countriesToPhoneCodes()[country] + ' ';
        $("#phone").val(phone);
        $("#phone").trigger("change");
        state.phone = phone;
    }

    // IE 11 compatible!
    function retrieveFromGoogleAddress(addressComponent, fullAddressObj) {

        var country = jsFind(fullAddressObj, "country", "political");

        switch (addressComponent) {
            case "line1":
                var part1 = jsFind(fullAddressObj, "street_number", "");
                part1 = nullCheck(part1);

                var part2 = jsFind(fullAddressObj, "route", "");
                part2 = nullCheck(part2);

                return part1.long_name + " " + part2.long_name;
                break;

            case "city":
                var city = {};

                switch (country.short_name) {
                    case "GB":
                        city = jsFind(fullAddressObj, "postal_town", "");
                        break;

                    default:
                        city = jsFind(fullAddressObj, "locality", "political");
                }

                city = nullCheck(city);
                return city.long_name;
                break;

            case "stateCountyRegion":

                var scr = {};

                switch (country.short_name) {

                    case "GB":
                        scr = jsFind(fullAddressObj, "administrative_area_level_2", "political");
                        //fullAddressObj.find(x => x.types[0] === "administrative_area_level_2" && x.types[1] === "political");
                        break;

                    case "US": // us requires short name so return now
                        scr = jsFind(fullAddressObj, "administrative_area_level_1", "political");
                        scr = nullCheck(scr);
                        return scr.short_name;
                        break;

                    default:
                        scr = jsFind(fullAddressObj, "administrative_area_level_1", "political");
                        break;
                }

                scr = nullCheck(scr);
                return scr.long_name;
                break;

            case "country":
                return country.short_name;
                break;

            case "postCodeZip":
                // when a postcode is incomplete e.g. M14 instead of M14 6SE
                // it pushes the type of postal_code_prefix before type postal_code because its evil like that
                var pcz = jsFind(fullAddressObj, "postal_code", "postal_code"); //fullAddressObj.find(x => x.types[0] === "postal_code" || x.types[1] === "postal_code");
                pcz = nullCheck(pcz);
                return pcz.long_name;
                break;

            default:
                // shouldnt get here since we can control and dont pass in any unknown cases
                break;
        }
        /**/
    }

