    <script>
    $(document).ready(function() {
        if ('' != '') {
            window.location.href = '';
        }

        document.addEventListener('gesturestart',
            function(e) {
                e.preventDefault();
            });

        $(".scrollTo").click(function(event) {
            event.preventDefault();
            var destination = $(this).attr("href");

            $('html, body').animate({
                scrollTop: $(destination).offset().top,
                easing:"linear"
                },
                1000);

            //$(destination).css("background", "#EEE");
            //$(destination).css("padding", "10px");
        });

        $(".jsMcAppWrapper").click(function() {
            $('#jsMcAppWrapper').modal('show');
            $("#jsMcAppWrapper").addClass("vertically-aligned");
        });
    });
    </script>

