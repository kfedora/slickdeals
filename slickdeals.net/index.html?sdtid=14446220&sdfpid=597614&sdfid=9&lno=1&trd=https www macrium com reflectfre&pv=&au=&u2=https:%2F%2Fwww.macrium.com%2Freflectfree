                            <script type="text/javascript">
                                var jsNewsletterSubscribeButton = $("#jsNewsletterSubscribeButton");
                                var jsNewsletterSubscribeEmail = $("#jsNewsletterSubscribeEmail");
                                var jsNewsletterSubscribeForm = $("#jsNewsletterSubscribeForm");
                                var jsNewsletterLoading = $("#jsNewsletterSubscribeButton span");

                                jsNewsletterSubscribeEmail.keyup(function() {
                                    var val = $(this).val();
                                    var emailIsValid = validateEmail(val);

                                    if (!emailIsValid) {
                                        jsNewsletterSubscribeButton.attr("disabled", "disabled");
                                    } else {
                                        jsNewsletterSubscribeButton.removeAttr("disabled");
                                    }
                                });

                                jsNewsletterSubscribeButton.click(function () {
                                    
                                    var newsLetterEmail = jsNewsletterSubscribeEmail.val();
                                    var nlFirstName = $("#jsNewsletterSubscribeFirstName").val();
                                    var nlLastName = $("#jsNewsletterSubscribeLastName").val();

                                    var url = "/form/SubscribeToNewsLetter?email=" +
                                        encodeURIComponent(newsLetterEmail) +
                                        "&hpFirstName=" +
                                        nlFirstName +
                                        "&hpLastName=" +
                                        nlLastName;

                                    jsNewsletterLoading.show();

                                    $.get(url,
                                            function() {
                                                // can do some stuff here
                                            })
                                        .done(function(resp) {
                                            console.log(resp);
                                            var newsLetterResponseHeader =
                                                resp.Success === true ? "Success" : "Warning";
                                            var newsLetterResponseMessage = resp.Msg;

                                            if (resp.Success && resp.Data) {
                                                ga('send', 'event', 'button', 'click', "Newsletter Sign Up", "1");
                                            }

                                            $("#newsLetterResponseHeader").html(newsLetterResponseHeader);
                                            $("#newsLetterResponseMessage").html(newsLetterResponseMessage);

                                            $("#id03").show();
                                            jsNewsletterLoading.hide();
                                        });
                                });

                                function validateEmail(mail) {
                                    if (/^\w+([-+.\']\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*$/.test(mail)) {
                                        return (true);
                                    }
                                    return (false);
                                }
                            </script>
                        </form>
                    </div>
