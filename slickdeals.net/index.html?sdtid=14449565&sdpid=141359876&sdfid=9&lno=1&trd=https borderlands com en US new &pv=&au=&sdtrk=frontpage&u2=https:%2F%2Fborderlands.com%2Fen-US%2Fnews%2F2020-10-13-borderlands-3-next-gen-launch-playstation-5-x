<script
	id="media-modal.html"
	type="text/template"
>
	<div>
	<modal-slideshow
		slides="mediaList"
		shown-slide="vm.$scope.shownMedia"
	>

		<div ng-if="$active">

			<div
				ng-if="slide.mature && ! ( $root.MatureContent.authorized || $root.MatureContent.unauthorized )"
				ng-init="$root.MatureContent.verify()"
			></div>

			<div
				ng-if="! slide.mature"
				ng-init="$root.MatureContent.contentBlocked = $root.MatureContent.checkingBirthday = false"
			></div>

		</div>

		<div
			ng-switch="slide.mature
				? $root.MatureContent.authorized
					? 'show-media'
					: $root.MatureContent.unauthorized
						? 'unauthorized'
						: 'verify-age'
				: 'show-media'"
		>

			<div
				ng-switch-when="show-media"
				ng-switch="slide.type"
			>

				<img
					ng-switch-when="picture"
					ng-src="[[ slide.imageURL ]]"
					class="block w-full max-h-full bg-black"
				/>

				<div
					ng-switch-when="video"
					bg-src="[[ slide.thumbURL ]]"
					class="absolute pin bg-cover bg-center"
				>
					<div
						ng-if="$active"
						class="animate-opacity absolute pin"
						ng-animate-children="true"
					>
						<iframe
							on-load="loaded = true"
							ng-show="loaded"
							yt-src="[[ 'https://www.youtube.com/embed/' + slide.youtubeID + '?controls=1&showinfo=0&rel=0&autoplay=1' ]]"
							min-percent-watched="50"
							when-watched="slide.watched = true"
							class="block animate-opacity w-full h-full"
							allowfullscreen
						></iframe>
					</div>
				</div>

				<div
					ng-switch-when="stream"
					bg-src="[[ slide.stream.preview.large ]]"
					class="absolute pin bg-cover bg-center"
				>
					<div
						ng-if="$active"
						class="animate-opacity absolute pin"
						ng-animate-children="true"
					>
						<iframe
							on-load="loaded = true"
							ng-show="loaded"
							ng-src="[[ 'https://player.twitch.tv/?channel=' + slide.stream.user_name + '&parent=' + 'borderlands.com' ]]"
							frameborder="0"
							allowfullscreen
							scrolling="no"
							class="block animate-opacity w-full h-full"
						></iframe>
					</div>
				</div>

			</div>

			<div
				ng-switch-when="unauthorized"
				class="absolute pin-x y-centered text-center"
			>
				<h4>
					Sorry, there was a problem with your submission. Please visit our privacy policy for more information.
				</h4>
			</div>

			<a
				ng-click="$root.MatureContent.verify()"
				ng-switch-when="verify-age"
				class="block absolute pin"
			>
				<div class="absolute pin-x y-centered text-center">
					<notch-button class="inline-block">
						Verify Your Age
					</notch-button>
				</div>
			</a>

		</div>

	</modal-slideshow>
</div>

</script>

