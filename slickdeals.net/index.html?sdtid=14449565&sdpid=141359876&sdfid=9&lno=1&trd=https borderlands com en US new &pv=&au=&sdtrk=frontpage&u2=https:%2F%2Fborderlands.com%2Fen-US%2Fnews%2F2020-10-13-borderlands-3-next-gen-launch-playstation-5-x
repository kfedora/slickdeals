<script
	id="auth-modals.html"
	type="text/template"
>
	<div>
	<modal
		shown="Auth.showLoginModal"
		options="{ widthClass: 'w-modal-md' }"
		data-test="login-modal"
		ng-init="platformItems = [ {
			platform: 'psn',
			altText: &#34;PSN&#34;,
			spriteClass: 'sprite-platform-psn',
		}, {
			platform: 'xboxlive',
			altText: &#34;Xbox Live&#34;,
			spriteClass: 'sprite-platform-xboxlive',
		}, {
			platform: 'steam',
			altText: &#34;Steam&#34;,
			spriteClass: 'sprite-platform-steam',
		}, {
			platform: 'epic',
			altText: 'Epic Games Store',
			spriteClass: 'sprite-platform-egs',
		}, {
			platform: 'my2k',
			altText: &#34;2K Account&#34;,
			spriteClass: 'sprite-platform-twok',
		}, {
			platform: 'twitch',
			altText: &#34;Twitch&#34;,
			spriteClass: 'sprite-platform-twitch',
		}, {
			platform: 'twitter',
			altText: &#34;Twitter&#34;,
			spriteClass: 'sprite-platform-twitter',
		}, {
			platform: 'facebook',
			altText: &#34;Facebook&#34;,
			spriteClass: 'sprite-platform-fb',
		} ]"
	>

		<modal-header ng-switch="Auth.showLoginModal">

			<div
				ng-switch-default
				class="sprite-modal-shift"
			></div>

		</modal-header>

		<div ng-switch="Auth.showLoginModal">

