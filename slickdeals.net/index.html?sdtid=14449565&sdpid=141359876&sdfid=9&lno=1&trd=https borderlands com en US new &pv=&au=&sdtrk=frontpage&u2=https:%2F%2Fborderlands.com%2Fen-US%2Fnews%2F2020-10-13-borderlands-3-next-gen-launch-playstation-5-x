				ng-switch-default
				class="text-center max-w-form-content mx-auto pb-xl px-sm md:px-lgr"
			>

				<form
					ng-submit="
						$event.preventDefault();
						form.$valid && Auth.login(loginModel);"
					name="form"
					ng-init="loginModel = {}"
				>

					<div
						class="mt-lg text-red text-p relative"
						ng-switch="form.username.$error.notIn
							? 'notIn'
							: Auth.errors.login || 'no-error'"
					>

						<div
							ng-switch-when="ACCOUNT_LINK_ERROR"
							class="animate-opacity in-place"
							data-test="account-link-error"
						>
