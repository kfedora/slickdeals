<script
	id="purchase-url-selector.html"
	type="text/template"
>
	<div>
	<form
		ng-if="vm.facetedPurchaseUrls.list.length"
		name="form"
		class="block text-center"
		ng-init="
			promptByFacet = {
				regionSlug: &#34;Region&#34;,
				platformSlug: &#34;Platform&#34;,
				retailerSlug: &#34;Retailer&#34;,
			};
			selects = [ {
				facet: 'regionSlug',
				resourceBySlug: vm.regionBySlug,
				unfilterSelf: { regionSlug: undefined },
				key: 'rg',
			}, ( platformSelect = {
				facet: 'platformSlug',
				resourceBySlug: vm.platformBySlug,
				unfilterSelf: { platformSlug: undefined },
				key: 'pl',
			} ), ( retailerSelect = {
				facet: 'retailerSlug',
				resourceBySlug: vm.retailerBySlug,
				unfilterSelf: { retailerSlug: undefined },
				key: 'rt',
			} ) ];"
	>

		<div
			class="text-left font-heading mb-sm pl-xs"
			ng-class="{ 'pt-lgr': ! $first }"
			ng-repeat-start="select in selects"
			define-persistent-property="
				[[ select.facet ]]
				on vm.selectedSlugByFacet
				with key select.key
				in storage hash"
		>
			[[ promptByFacet[ select.facet ] ]]
		</div>

		<label
			class="block select text-left overflow-ellipsis"
			ng-repeat-end
			ng-class="{
				disabled: disabled = select == retailerSelect
					&& ! (
						vm.selectedSlugByFacet.regionSlug
							&& vm.selectedSlugByFacet.platformSlug
					),
			}"
		>

			 
			<span ng-repeat="selection in [
				( vm.selectedSlugByFacet
					| assign:( select.unfilterSelf
						| assign:retailerSelect.unfilterSelf )
					| values
					| join )
			]">

				
				<span
					ng-repeat="onlyAvailableSlug in availableSlugs.length == 1 ? availableSlugs : []"
					ng-init="vm.log('setting onlyAvailableSlug') && (vm.selectedSlugByFacet[ select.facet ] = onlyAvailableSlug)"
				></span>

				 
				<span
					ng-if="select == retailerSelect
						&& ! vm.selectedSlugByFacet[ select.facet ]
						&& vm.selectedSlugByFacet.platformSlug
						&& ( facetedForAvailableRetailers
							= ( vm.facetedPurchaseUrls | filterFacets:(
								vm.selectedSlugByFacet | assign:retailerSelect.unfilterSelf
							) )
						).valuesByFacet[ select.facet ].length > 1
						&& (
							facetedForAvailableRetailers.listByValueByFacet[ select.facet ]['2k-store'].length
							|| facetedForAvailableRetailers.listByValueByFacet[ select.facet ]['epic'].length
						)"
					ng-init="vm.log('setting first of either 2k or epic') && (vm.selectedSlugByFacet[ select.facet ]
						= facetedForAvailableRetailers.listByValueByFacet[ select.facet ]['2k-store']
							? '2k-store'
							: 'epic')"
				></span>

			</span>

			 
			<span
				ng-if="select.facet === 'regionSlug'
					&& availableSlugs.indexOf( 'united-states' ) > - 1"
				ng-init="! vm.selectedSlugByFacet[ select.facet ] && vm.log('setting default language')
					&& ( vm.selectedSlugByFacet[ select.facet ] = 'united-states' )"
			></span>

			 
			<span
				ng-repeat="selectedSlug in vm.selectedSlugByFacet[ select.facet ] ? [ vm.selectedSlugByFacet[ select.facet ] ] : []"
				ng-if="! (
						vm.facetedPurchaseUrls | filterFacets:vm.selectedSlugByFacet
					).listByValueByFacet[ select.facet ][ vm.selectedSlugByFacet[ select.facet ] ].length"
				ng-init="vm.log('unsetting invalid ' + select.facet + ' of ' + vm.selectedSlugByFacet[ select.facet ]) && (vm.selectedSlugByFacet[ select.facet ] = undefined)"
			></span>

			[[ select.resourceBySlug[ vm.selectedSlugByFacet[ select.facet ] ].title || promptByFacet[ select.facet ] ]]

			<select
				ng-options="slug as select.resourceBySlug[ slug ].title for slug in availableSlugs = (
					facetedPurchaseUrlsForSelect = vm.facetedPurchaseUrls
					| filterFacets:select == retailerSelect
						? (
							vm.selectedSlugByFacet
							| assign:retailerSelect.unfilterSelf
						)
						: select == platformSelect
							? { regionSlug: vm.selectedSlugByFacet.regionSlug }
							: {}
				).valuesByFacet[ select.facet ] | orderBy"
				ng-model="vm.selectedSlugByFacet[ select.facet ]"
				ng-change="select != retailerSelect && vm.log('unsetting retailer')
					&& ( vm.selectedSlugByFacet[ retailerSelect.facet ] = undefined )"
				ng-disabled="disabled"
				required
			>
				<option value="">
					[[ promptByFacet[ select.facet ] ]]
				</option>
			</select>

		</label>

		<div class="mt-lgr relative">

			<button
				class="block w-full appearance-none outline-none transitions"
				ng-class="{ 'opacity-50': ! form.$valid }"
			>
				<notch-button
					btn-theme="yellow"
					btn-block="true"
				>
					Buy Now
				</notch-button>
			</button>

			<a
				ng-if="form.$valid"
				ng-href="[[ ( vm.facetedPurchaseUrls | filterFacets:vm.selectedSlugByFacet ).list[ 0 ].url ]]"
				target="_blank"
				class="block absolute pin"
			></a>

		</div>

	</form>
</div>

</script>

