		<span class="u-anchorTarget" id="post-412688"></span>

		<div class="message-inner">
			<div class="message-cell message-cell--user">
				

	<section itemscope itemtype="https://schema.org/Person" class="message-user">
		<div class="message-avatar ">
			<div class="message-avatar-wrapper">
				<a href="/members/pilot04.39029/" class="avatar avatar--m avatar--default avatar--default--dynamic" data-user-id="39029" data-xf-init="member-tooltip" style="background-color: #1f7a3d; color: #70db94">
			<span class="avatar-u39029-m">P</span> 
		</a>
				
			</div>
