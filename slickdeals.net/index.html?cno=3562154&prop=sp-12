<script>
function getParameterByName(name) {
  name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
  var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
    results = regex.exec(location.search);
  return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
}
// read cookie
function readCookie(name) {
  var nameEQ = name + "=";
  var ca = document.cookie.split(';');
  for (var i = 0; i < ca.length; i++) {
    var c = ca[i];
    while (c.charAt(0) === ' ') {
      c = c.substring(1, c.length);
    }
    if (c.indexOf(nameEQ) === 0) {
      return c.substring(nameEQ.length, c.length);
    }
  }
  return null;
}
// Give the URL parameter a variable name
var cjeventid = getParameterByName('cjevent');

if (cjeventid) {
// Give the cookie a duration
var now = new Date();
var time = now.getTime();
var expTime = time + 1000 * 31536000;
now.setTime(expTime);

// Set the cookie
if (expTime) {
  document.cookie = "cjevent=" + cjeventid + "; expires=" + now.toGMTString();
}
}
if (window.cj_conversion_src) {
var iframeSrc = window.cj_conversion_src += "&CJEVENT=" + readCookie('cjevent');
document.getElementById('cj_conversion').src = iframeSrc;
}

</script>
