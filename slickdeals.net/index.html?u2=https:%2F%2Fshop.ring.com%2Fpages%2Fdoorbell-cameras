<!-- Testimonials Section Scripts -->
<script type="text/javascript">
  $('.testimonial-header').click(function(e){
      let category = $(e.target).attr('data-testimonial');
      $('.testimonial-header').removeClass('active');
      $('.testimonials-headers').find('[data-testimonial="'+category+'"]').addClass('active');
      $('.testimonials').removeClass('active');
      $('.testimonials-wrapper').find('[data-testimonial="'+category+'"]').addClass('active');
  });
  $('.pmp-testimonials .testimonials').hover(function(e){
      let active_testimonials = ($('.testimonials.active').find('.testimonials-container'))[0];
      if (active_testimonials.scrollWidth > active_testimonials.clientWidth) {
          $('.testimonials-wrapper').find('.right').show();
      } else {
          $('.testimonials-wrapper').find('.right').hide();
      }
      if (parseInt($('.testimonials.active')[0].style.marginLeft) < 0) {
          $('.testimonials-wrapper').find('.left').show();
      } else {
          $('.testimonials-wrapper').find('.left').hide();
      }
      if ($(window).width() < 769) {
          $('.testimonials-wrapper').find('.left').hide();
          $('.testimonials-wrapper').find('.right').hide();
      }
  });
  $('.testimonials-wrapper .right').click(function() {
      let active_testimonials = $('.testimonials.active');
      if (active_testimonials[0].clientWidth < (active_testimonials.find('.testimonials-container'))[0].scrollWidth) {
          let testimonial_width = active_testimonials.find('.testimonial').outerWidth();
          let testimonials_wrapper_width = $('.testimonials-wrapper').width();
          let num_cards_to_move = parseInt(testimonials_wrapper_width / testimonial_width) - 2;
          cur_left = parseInt(active_testimonials[0].style.marginLeft);
          if (!cur_left) {cur_left = 0;}
          active_testimonials[0].style.marginLeft = (cur_left - (testimonial_width * num_cards_to_move)) + 'px';
      }
  });
  $('.testimonials-wrapper .left').click(function() {
      let active_testimonials = $('.testimonials.active');
      if (parseInt(active_testimonials[0].style.marginLeft) < 0) {
          let testimonial_width = active_testimonials.find('.testimonial').outerWidth();
          let testimonials_wrapper_width = $('.testimonials-wrapper').width();
          let num_cards_to_move = parseInt(testimonials_wrapper_width / testimonial_width) - 2;
          cur_left = parseInt(active_testimonials[0].style.marginLeft);
          if (!cur_left) {cur_left = 0;}
          active_testimonials[0].style.marginLeft = (cur_left + (testimonial_width * num_cards_to_move)) + 'px';
      }
  });
</script>
