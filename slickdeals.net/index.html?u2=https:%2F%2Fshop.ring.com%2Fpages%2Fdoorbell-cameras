  <script type="text/javascript">
    $('.grid_dropdown_list li').click(function(){
      if($(this).find("div").eq(0).hasClass('active')){
        $(this).find("div").eq(0).toggleClass('active');
        $(this).find('.collapse').toggleClass('active');
        $(this).find('.icon-chevron-down').toggleClass('active');
      } else {
        $('.grid_dropdown_list li .active').removeClass('active');
        $(this).find("div").eq(0).toggleClass('active');
        $(this).find('.collapse').toggleClass('active');
        $(this).find('.icon-chevron-down').toggleClass('active');
      }
    })
  </script>


      
    
