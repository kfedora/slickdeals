<script>
  const windowWidth = window.innerWidth;

	function playConnectedVideo(){
		document.getElementById("stay-connected-video").play();
		document.getElementById("stay-connected-video").muted = true;
	}

  function showConnectedVideo() {
		document.getElementById("cams-ugc-video").style.display = "none";
		document.getElementById("cams-ugc-video").pause();
		document.getElementById("stay-connected-video").style.display = "inline-block";
		document.getElementById("cams-ugc-video-mobile").style.display = "none";
		document.getElementById("cams-ugc-video-mobile").pause();
		document.getElementById("cams-ugc-video-play-btn").style.display = "none";
		document.getElementById("stay-connected-video-mobile").style.display = "inline-block";
		document.getElementById("stay-connected-video-play-btn").style.display = "inline-block";

    if (windowWidth > 1023) {
      playConnectedVideo();
    }
  }

	function playStopCrime(){
		document.getElementById("cams-ugc-video").play();
		document.getElementById("cams-ugc-video").muted = true;
	}

  function showStopCrime() {
		document.getElementById("stay-connected-video").style.display = "none";
		document.getElementById("stay-connected-video").pause();
		document.getElementById("cams-ugc-video").style.display = "inline-block";
		document.getElementById("stay-connected-video-mobile").style.display = "none";
		document.getElementById("stay-connected-video-mobile").pause();
		document.getElementById("stay-connected-video-play-btn").style.display = "none";
		document.getElementById("cams-ugc-video-mobile").style.display = "inline-block";
		document.getElementById("cams-ugc-video-play-btn").style.display = "inline-block";

    if (windowWidth > 1023) {
      playStopCrime();
    }
  }

    $('.animation-header').click(function(e){
        let category = $(e.target).attr('data-testimonial');
        $('.animation-header').removeClass('active');
        $('.animation-headers').find('[data-testimonial="'+category+'"]').addClass('active');
        $('.video-block').removeClass('active');
        $('.testimonials-wrapper').find('[data-testimonial="'+category+'"]').addClass('active');
    });

    $('.mute-btn').click(function(e) {
        let video_block = $(e.target).closest('.video-block');
        let vid = video_block.find('video');
        vid.get()[0].muted = false;
        $(e.target).hide();
        video_block.find('.unmute-btn').show();
    });
    $('.unmute-btn').click(function(e) {
        let video_block = $(e.target).closest('.video-block');
        let vid = video_block.find('video');
        vid.get()[0].muted = true;
        $(e.target).hide();
        video_block.find('.mute-btn').show();
    });
    $('.play-btn').click(function(e) {
        let video_block = $(e.target).closest('.video-block');
        let vid = video_block.find('video');
        vid.get()[0].play();
        $(e.target).hide();
    });
</script>

<script>
    $('.security-icon').click(function(){
        let category = $(this).attr('data-id');
        let active_img = $(this).attr('active-img');
        let inactive_img = $('.security-icon.active').attr('inactive-img');
        let img_inactive_class_name =  ".img-overlay-" + $('.security-icon.active').attr('data-id');
        $('.security-icon.active').find('.img').css({backgroundImage: 'url('+inactive_img+')'});
        $('.security-icon').removeClass('active');

        $('.security-icons').find('[data-id="'+category+'"]').addClass('active');
        $('.security-icons').find('[data-id="'+category+'"]').find('.img').css({backgroundImage: 'url('+active_img+')'});

        $(img_inactive_class_name).removeClass('active');
        $('.security-around-home').find('[data-id="'+category+'"]').addClass('active');
    });
</script>

<script>
	$('.pmp-quiz .pmp-quiz-main .pmp-quiz-ans-block .quiz-button').click(function(){
		let quizans = $(this).attr('data-quiz-ans');
		$('.pmp-quiz-main').removeClass('active');
		$('.pmp-quiz').find('[data-quiz-id="'+quizans+'"]').addClass('active');
	});
</script>

