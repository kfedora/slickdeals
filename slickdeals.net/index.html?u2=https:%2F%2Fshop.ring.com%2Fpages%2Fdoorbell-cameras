    <div class="locate_this">
      <div class="close" onclick="closeOnClick()"></div>
      <picture onclick="pictureOnClick()">
        <source media="(max-width: 767px)" srcset="https://cdn.shopify.com/s/files/1/0021/2300/6050/files/RP_timeline_VD_mobile_2x_659ed9a6-afde-42bf-9033-9069a3c0f9e9.png" />
        <source media="(max-width: 1023px)" srcset="https://cdn.shopify.com/s/files/1/0021/2300/6050/files/RP_timeline_VD_tablet_2x_e99e6f7c-9fdd-4bab-9d1c-de27d9a8aae6.png" />
        <img src="https://cdn.shopify.com/s/files/1/0021/2300/6050/files/phone_frame.png"/>
      </picture>
			<div>
        
          <video onclick="videoOnClick()" src="https://cdn.shopify.com/s/files/1/0021/2300/6050/files/EDIT_Resize_Doorbell_1080_20191220_WO.mp4" muted playsinline autoplay></video>
        
			</div>
