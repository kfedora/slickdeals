<script type="text/javascript">

  var element = $('.locate_this');
  var media = $(element).find('video').get(0);
  var viewPortH = Math.max(document.documentElement.clientHeight, window.innerHeight || 0);
  var viewPortW = Math.max(document.documentElement.clientWidth, window.innerWidth || 0);

  function triggerVideoOnView(element) {
    var scrollPos = window.pageYOffset;
    var elementPos = element.offset();
    var elementPosCorrection = elementPos.top - ( viewPortH / 2 );
    var elementEnd = elementPos.top + element.height() / 1.4;

    function playVideo(element) {
        media.play();
    };
    function stopVideo(element) {
      media.pause();
      media.currentTime = 0;
    };

    if(scrollPos > elementPosCorrection && scrollPos < elementEnd) {
      playVideo(element);
    } else {
      stopVideo(element);
    }

  };

  function pictureOnClick() {
		$('.call-center-bar').fadeOut();
    if ( viewPortW > 1023 && media.currentTime == media.duration ) {
      media.play();
    } else if ( viewPortW < 1024 ){
      element.addClass('full_screen_mode');
      media.pause();
      media.currentTime = 0;
      media.play();
    }
  };

  // Since the picture it's on top of the video, the video click will not be
  // accesible unless the full screen mode it's activaded
  function videoOnClick() {
    if ( viewPortW < 1024 && media.currentTime == media.duration ) {
      media.play();
    }
  };

  function closeOnClick() {
		$('.call-center-bar').fadeIn();
    element.removeClass('full_screen_mode');
    media.pause();
    media.currentTime = 0;
  };

  $(document).ready(function(){
    if ( viewPortW > 1023 ) {
      triggerVideoOnView(element);
    }
    $(window).on('scroll', function() {
      if ( viewPortW > 1023 ) {
        triggerVideoOnView(element);
      }
    });
    $(window).on('resize', function() {
      viewPortH = Math.max(document.documentElement.clientHeight, window.innerHeight || 0);
      viewPortW = Math.max(document.documentElement.clientWidth, window.innerWidth || 0);
      if ( viewPortW > 1023 ) {
        triggerVideoOnView(element);
      }
    });
  })

</script>
