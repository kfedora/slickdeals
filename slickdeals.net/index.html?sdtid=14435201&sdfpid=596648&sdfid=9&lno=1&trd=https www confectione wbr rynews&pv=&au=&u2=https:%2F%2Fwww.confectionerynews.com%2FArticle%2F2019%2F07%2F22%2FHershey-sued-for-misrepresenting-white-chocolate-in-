    <script type="text/javascript">
        $(document).ready(function() {
            var stickyTop = $('.AdHabillage').offset().top;
            $(window).scroll(function() {
                var windowTop = $(window).scrollTop();
                if (stickyTop < windowTop + $("#toggler").height()) {
                    $('.AdHabillage').css('top', '0');
                    $('.AdHabillage').css('position', 'fixed');
                } else {
                    $('.AdHabillage').animate({'top': $("#toggler").height()}, 150);
                    $('.AdHabillage').css('position', 'absolute');
                }
            });
        });
    </script>


